---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import GithubInfo from "../components/GithubInfo.astro";

const title = "Explore meus projetos";
const description =
  "Aqui temos os projetos pessoais que desenvolvi ao longo do tempo.";
---

<!doctype html>
<html>
  <head>
    <BaseHead title={title} description={description} />
    <style>
      body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        margin: 0;
      }
      main {
        flex: 1;
        width: 100%;
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem;
        display: flex;
        flex-direction: column;
      }

      .project-header {
        text-align: center;
        margin-bottom: 4rem;
        padding: 4rem 1rem;
        background: linear-gradient(
          180deg,
          rgba(var(--accent), 0.08) 0%,
          rgba(var(--accent), 0.02) 100%
        );
        border-radius: 1.5rem;
      }

      .project-title {
        font-size: 3rem;
        font-weight: 800;
        color: rgb(var(--black));
        margin-bottom: 1rem;
        line-height: 1.2;
      }

      .project-description {
        font-size: 1.25rem;
        color: rgb(var(--gray));
        max-width: 600px;
        line-height: 1.6;
        margin: 0 auto;
      }

      .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
        width: 100%;
        padding: 0 1rem;
      }

      @media (max-width: 768px) {
        .projects-grid {
          grid-template-columns: 1fr;
        }

        .project-title {
          font-size: 2rem;
        }

        .project-description {
          font-size: 1rem;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <div class="project-header">
        <h1 class="project-title">{title}</h1>
        <p class="project-description">{description}</p>
      </div>
      <div class="projects-grid">
        <GithubInfo url="https://github.com/lpsm-dev/docker-crypto-miner" />
        <GithubInfo url="https://github.com/lpsm-dev/loli" />
      </div>
    </main>
    <Footer />
  </body>
</html>
