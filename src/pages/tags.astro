---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { getCollection } from "astro:content";
import { getUrl } from "../utils/url";

// Fetch all blog posts
const posts = await getCollection("blog", ({ data }) => data.publish !== false);

// Extract unique tags from the posts
const tags = [...new Set(posts.flatMap((post) => post.data.tags ?? []))];

// Define the page title and description
const title = "Explore as tags";
const description =
    "Navegue pelas tags e busque os artigos relacionados a cada tag";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={title} description={description} />
        <style>
            body {
                min-height: 100vh;
                display: flex;
                flex-direction: column;
                margin: 0;
            }

            main {
                flex: 1;
                width: 100%;
                max-width: 1400px;
                margin: 0 auto;
                padding: 2rem;
                display: flex;
                flex-direction: column;
            }

            .tags-header {
                text-align: center;
                margin-bottom: 3rem;
                padding: 3rem 1rem;
                background: linear-gradient(
                    180deg,
                    rgba(var(--accent), 0.08) 0%,
                    rgba(var(--accent), 0.02) 100%
                );
                border-radius: 1.5rem;
            }

            .tags-title {
                font-size: 2.5rem;
                font-weight: 800;
                color: rgb(var(--black));
                margin-bottom: 0.75rem;
            }

            .tags-description {
                font-size: 1.1rem;
                color: rgb(var(--gray));
                max-width: 600px;
                line-height: 1.6;
                margin: 0 auto;
            }

            .tags-grid {
                display: flex;
                flex-wrap: wrap;
                gap: 0.5rem;
                justify-content: flex-start;
                margin-bottom: 2rem;
            }

            .tag-card {
                display: inline-flex;
                align-items: center;
                justify-content: center;
                padding: 0.25rem 0.5rem;
                background: rgba(0, 123, 255, 0.1);
                color: white;
                border-radius: 0.25rem;
                text-decoration: none;
                font-weight: 500;
                font-size: 1.5rem;
                transition: all 0.2s ease;
                border: 1px solid rgba(0, 123, 255, 0.2);
                margin: 0;
            }

            .tag-card:hover {
                background: rgba(0, 123, 255, 0.2);
                color: white;
                transform: translateY(-1px);
                border-color: rgba(0, 123, 255, 0.4);
            }

            @media (max-width: 768px) {
                .tags-header {
                    padding: 2rem 1rem;
                    margin-bottom: 2rem;
                }

                .tags-title {
                    font-size: 2rem;
                }

                .tags-description {
                    font-size: 1rem;
                    padding: 0 1rem;
                }

                .tags-grid {
                    grid-template-columns: 1fr;
                    gap: 0.75rem; /* Reduzir o gap entre os cards no mobile */
                }
            }
        </style>
    </head>
    <body>
        <Header />
        <main>
            <div class="tags-header">
                <h1 class="tags-title">{title}</h1>
                <p class="tags-description">{description}</p>
            </div>
            {
                tags.length > 0 ? (
                    <div class="tags-grid">
                        {tags.map((tag) => (
                            <a href={getUrl(`/tag/${tag}/`)} class="tag-card">
                                #{tag}
                            </a>
                        ))}
                    </div>
                ) : (
                    <div class="no-tags">No tags found. Check back soon!</div>
                )
            }
        </main>
        <Footer />
    </body>
</html>
