---
import { LINKEDIN_URL } from "../consts";
const today = new Date();
---

<footer>
  <div class="footer-content">
    <div class="social-links">
      <a
        href={LINKEDIN_URL}
        target="_blank"
        class="social-link"
        aria-label="LinkedIn"
      >
        <svg viewBox="0 0 24 24" aria-hidden="true">
          <path
            fill="currentColor"
            d="M20.447 2H3.553C2.693 2 2 2.693 2 3.553v16.895C2 21.307 2.693 22 3.553 22h16.895C21.307 22 22 21.307 22 20.447V3.553C22 2.693 21.307 2 20.447 2zM7.75 19.25H4.75V9h3v10.25zm-1.5-11.5a1.75 1.75 0 1 1 0-3.5 1.75 1.75 0 0 1 0 3.5zM19.25 19.25h-3V14c0-1.25-.5-2-1.75-2s-1.75.75-1.75 2v5.25h-3V9h3v1.5h.05c.35-.65 1.25-1.5 2.45-1.5 1.8 0 3.25 1.5 3.25 3.75v6.5z"
          ></path>
        </svg>
      </a>
    </div>
    <div class="copyright">
      &copy; {today.getFullYear()} Obsidian Blogger. Todos os direitos reservados.
    </div>
  </div>
</footer>

<style>
  footer {
    padding: 3rem 1rem;
    background: rgba(var(--gray-light), 0.5);
    color: rgb(var(--gray));
    border-top: 1px solid rgba(var(--gray), 0.1);
  }

  .footer-content {
    max-width: 920px;
    margin: 0 auto;
    text-align: center;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    color: rgb(var(--gray-dark));
    border-radius: 0.75rem;
    transition: all 0.2s ease;
    background: rgba(var(--gray-light), 0.5);
  }

  .social-link:hover {
    color: rgb(var(--black));
    background: rgba(var(--gray), 0.1);
    transform: translateY(-2px);
  }

  .social-link svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  .copyright {
    font-size: 0.9rem;
    color: rgb(var(--gray));
  }

  @media (max-width: 720px) {
    footer {
      padding: 2rem 1rem;
    }

    .social-link {
      width: 2.25rem;
      height: 2.25rem;
    }

    .social-link svg {
      width: 1.25rem;
      height: 1.25rem;
    }
  }
</style>
