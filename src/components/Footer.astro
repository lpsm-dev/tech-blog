<style>
  footer {
    padding: 3rem 1rem;
    background: rgba(var(--gray-light), 0.5);
    color: rgb(var(--gray));
    border-top: 1px solid rgba(var(--gray), 0.1);
    position: relative;
  }

  .footer-content {
    max-width: 920px;
    margin: 0 auto;
    text-align: center;
    position: relative;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    color: rgb(var(--gray-dark));
    border-radius: 0.75rem;
    transition: all 0.2s ease;
    background: rgba(var(--gray-light), 0.5);
  }

  .social-link:hover {
    color: rgb(var(--black));
    background: rgba(var(--gray), 0.1);
    transform: translateY(-2px);
  }

  .social-link svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  .scroll-to-top {
    position: fixed;
    right: 1rem;
    bottom: 1rem;
  }

  .scroll-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: white;
    color: black;
    border: 1px solid black;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .scroll-button:hover {
    background: black;
    color: white;
    transform: translateY(-2px);
  }

  .scroll-button svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  .copyright {
    font-size: 0.9rem;
    color: rgb(var(--gray));
  }

  @media (max-width: 720px) {
    footer {
      padding: 2rem 1rem;
    }

    .social-link {
      width: 2.25rem;
      height: 2.25rem;
    }

    .social-link svg {
      width: 1.25rem;
      height: 1.25rem;
    }

    .scroll-to-top {
      right: 0.5rem;
      bottom: 0.5rem;
    }

    .scroll-button {
      width: 2.25rem;
      height: 2.25rem;
    }

    .scroll-button svg {
      width: 1.25rem;
      height: 1.25rem;
    }
  }
</style>

<script>
  document.getElementById("scroll-to-top").addEventListener("click", () => {
    window.scrollTo({ top: 0, behavior: "smooth" });
  });
</script>
