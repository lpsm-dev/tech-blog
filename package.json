{
  "name": "tech-blog",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "astro": "astro",
    "build": "npm run check:astro && astro build",
    "check:astro": "astro check",
    "check:eslint": "eslint .",
    "check:prettier": "prettier --check .",
    "clean": "rm -rf node_modules dist",
    "dev": "astro dev",
    "fix:eslint": "eslint --fix .",
    "fix:prettier": "prettier -w .",
    "format:package": "npx sort-package-json",
    "preview": "astro preview",
    "new:post": "node scripts/new-post.js"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "eslint -c eslint.config.js"
    ],
    "*.{ts,tsx,json,js,css,less,scss,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/mdx": "^4.0.3",
    "@astrojs/rss": "^4.0.10",
    "@astrojs/sitemap": "^3.2.1",
    "@astrojs/tailwind": "^6.0.0",
    "@astrojs/ts-plugin": "^1.10.4",
    "astro": "^5.12.8",
    "astro-expressive-code": "^0.41.0",
    "astro-heroicons": "^2.1.5",
    "astro-icon": "^1.1.5",
    "astro-pagefind": "^1.4.0",
    "date-fns": "^4.0.0",
    "gray-matter": "^4.0.3",
    "mermaid": "^11.4.1",
    "node-fetch": "^3.3.2",
    "pagefind": "^1.0.0",
    "playwright": "^1.49.1",
    "reading-time": "^1.5.0",
    "sharp": "^0.34.0",
    "slugify": "^1.6.6",
    "solid-js": "^1.9.4",
    "tailwindcss": "^3.4.16",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@iconify-json/lucide": "^1.2.22",
    "@iconify-json/material-symbols": "^1.2.12",
    "@iconify-json/mdi": "^1.2.3",
    "@iconify-json/ri": "^1.2.5",
    "astro-eslint-parser": "^1.1.0",
    "browserslist": "^4.24.4",
    "eslint": "^9.18.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-format": "^1.0.1",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.14.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}